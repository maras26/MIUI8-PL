<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/info_layout">
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/network_utility_hint" />
        <AutoCompleteTextView android:id="@id/cmdLine" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textNoSuggestions" style="@style/info_label" />
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/info_layout">
            <Button android:id="@id/runBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/run" />
            <Spinner android:id="@id/cmdSpinnner" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <View android:background="#ff777777" android:layout_width="fill_parent" android:layout_height="1.0dip" />
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/sys_property_hint" />
        <EditText android:id="@id/syspropName" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <EditText android:id="@id/syspropValue" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/info_layout">
            <Button android:id="@id/setBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sys_set_button" />
            <Button android:id="@id/getBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sys_get_button" />
            <Spinner android:id="@id/sysPropSpinnner" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView android:id="@id/outputText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textLongMessage|textMultiLine|textNoSuggestions" style="@style/info_value" />
        <View android:background="#ff777777" android:layout_width="fill_parent" android:layout_height="1.0dip" />
    </LinearLayout>
</ScrollView>